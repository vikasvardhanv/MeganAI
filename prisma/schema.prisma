generator client {
  provider = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "postgresql"
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  image         String?
  password      String?
  
  // Subscription
  plan          Plan      @default(FREE)
  credits       Int       @default(100)
  
  // Relations
  accounts      Account[]
  sessions      Session[]
  projects      Project[]
  
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Project {
  id          String        @id @default(cuid())
  name        String
  description String?
  slug        String        @unique
  
  // Project settings
  status      ProjectStatus @default(DRAFT)
  framework   Framework     @default(NEXTJS)
  database    DatabaseType  @default(POSTGRESQL)
  
  // Generated content
  prompt      String        @db.Text
  code        Json?         // Stores generated file structure
  preview_url String?
  deploy_url  String?
  
  // Metadata
  techStack   Json?         // { frontend: "Next.js", backend: "Node", db: "PostgreSQL" }
  
  // Relations
  userId      String
  user        User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  messages    Message[]
  versions    Version[]
  
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
}

model Message {
  id        String      @id @default(cuid())
  role      MessageRole
  content   String      @db.Text
  
  // Code changes
  codeChanges Json?     // { file: "path", action: "create|update|delete", content: "..." }
  
  // Relations
  projectId String
  project   Project     @relation(fields: [projectId], references: [id], onDelete: Cascade)
  
  createdAt DateTime    @default(now())
}

model Version {
  id        String   @id @default(cuid())
  version   Int
  code      Json
  message   String?
  
  projectId String
  project   Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  
  createdAt DateTime @default(now())
}

enum Plan {
  FREE
  PRO
  TEAM
  ENTERPRISE
}

enum ProjectStatus {
  DRAFT
  GENERATING
  READY
  DEPLOYED
  ERROR
}

enum Framework {
  NEXTJS
  REACT
  VUE
  SVELTE
}

enum DatabaseType {
  POSTGRESQL
  MYSQL
  SQLITE
  ORACLE
  NONE
}

enum MessageRole {
  USER
  ASSISTANT
  SYSTEM
}
