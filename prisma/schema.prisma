generator client {
  provider = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "postgresql"
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  image         String?
  password      String?
  
  // Subscription
  plan          Plan      @default(FREE)
  credits       Int       @default(100)
  
  // Relations
  accounts      Account[]
  sessions      Session[]
  projects      Project[]
  
  // New relations for ZenForge
  ownedWorkspaces    Workspace[]       @relation("WorkspaceOwner")
  workspaceMemberships WorkspaceMember[]
  createdTasks       Task[]            @relation("TaskCreator")
  assignedTasks      Task[]            @relation("TaskAssignee")
  passes             Pass[]
  usageLogs          UsageLog[]
  
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Project {
  id          String        @id @default(cuid())
  name        String
  description String?
  slug        String        @unique
  
  // Project settings
  status      ProjectStatus @default(DRAFT)
  framework   Framework     @default(NEXTJS)
  database    DatabaseType  @default(POSTGRESQL)
  
  // Generated content
  prompt      String        @db.Text
  code        Json?         // Stores generated file structure
  preview_url String?
  deploy_url  String?
  
  // Metadata
  techStack   Json?         // { frontend: "Next.js", backend: "Node", db: "PostgreSQL" }
  
  // Relations
  userId      String
  user        User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  workspaceId String?
  workspace   Workspace?    @relation(fields: [workspaceId], references: [id])
  messages    Message[]
  versions    Version[]
  tasks       Task[]
  
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
}

model Message {
  id        String      @id @default(cuid())
  role      MessageRole
  content   String      @db.Text
  
  // Code changes
  codeChanges Json?     // { file: "path", action: "create|update|delete", content: "..." }
  
  // Relations
  projectId String
  project   Project     @relation(fields: [projectId], references: [id], onDelete: Cascade)
  
  createdAt DateTime    @default(now())
}

model Version {
  id        String   @id @default(cuid())
  version   Int
  code      Json
  message   String?
  
  projectId String
  project   Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  
  createdAt DateTime @default(now())
}

// ============ WORKSPACE & TEAMS ============

model Workspace {
  id          String   @id @default(cuid())
  name        String
  slug        String   @unique
  description String?
  
  ownerId     String
  owner       User     @relation("WorkspaceOwner", fields: [ownerId], references: [id])
  
  members     WorkspaceMember[]
  workflows   Workflow[]
  projects    Project[]
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model WorkspaceMember {
  id          String     @id @default(cuid())
  role        MemberRole @default(MEMBER)
  
  workspaceId String
  workspace   Workspace  @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
  userId      String
  user        User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  createdAt   DateTime   @default(now())
  
  @@unique([workspaceId, userId])
}

// ============ WORKFLOWS & TASKS (KANBAN) ============

model Workflow {
  id          String           @id @default(cuid())
  name        String
  description String?
  icon        String?          // Emoji or icon name
  color       String?          // Hex color
  template    WorkflowTemplate @default(CUSTOM)
  stages      Json             // ["Requirements", "Tech Spec", "Planning", "Implementation"]
  autoStart   Boolean          @default(false)
  
  workspaceId String
  workspace   Workspace        @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
  tasks       Task[]
  
  createdAt   DateTime         @default(now())
  updatedAt   DateTime         @updatedAt
}

model Task {
  id            String       @id @default(cuid())
  title         String
  description   String?      @db.Text
  
  // Status & Priority
  status        TaskStatus   @default(TODO)
  priority      TaskPriority @default(MEDIUM)
  position      Int          @default(0)  // For ordering in Kanban
  
  // Pipeline tracking
  currentStage  String?
  progress      Int          @default(0)  // 0-100
  
  // Git integration
  branchName    String?
  commits       Json[]       // Array of commit info
  
  // Planning
  planMd        String?      @db.Text
  
  // Relations
  workflowId    String
  workflow      Workflow     @relation(fields: [workflowId], references: [id], onDelete: Cascade)
  projectId     String?
  project       Project?     @relation(fields: [projectId], references: [id])
  assigneeId    String?
  assignee      User?        @relation("TaskAssignee", fields: [assigneeId], references: [id])
  createdById   String
  createdBy     User         @relation("TaskCreator", fields: [createdById], references: [id])
  
  steps         TaskStep[]
  
  createdAt     DateTime     @default(now())
  updatedAt     DateTime     @updatedAt
}

model TaskStep {
  id          String     @id @default(cuid())
  name        String
  description String?
  order       Int        @default(0)
  status      StepStatus @default(PENDING)
  
  // AI execution details
  agentUsed   String?
  modelUsed   String?
  tokensUsed  Int?
  durationMs  Int?
  
  // Output
  output      String?    @db.Text
  artifacts   Json[]     // Generated files
  error       String?
  
  taskId      String
  task        Task       @relation(fields: [taskId], references: [id], onDelete: Cascade)
  
  createdAt   DateTime   @default(now())
  completedAt DateTime?
}

// ============ PASSES & USAGE ============

model Pass {
  id          String   @id @default(cuid())
  type        PassType
  name        String
  credits     Int
  usedCredits Int      @default(0)
  price       Float    // In dollars
  
  validFrom   DateTime @default(now())
  validUntil  DateTime
  
  isActive    Boolean  @default(true)
  
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  createdAt   DateTime @default(now())
}

model UsageLog {
  id          String   @id @default(cuid())
  
  // What was used
  model       String
  taskType    String
  tokensIn    Int
  tokensOut   Int
  cost        Float    // In cents
  durationMs  Int
  
  // Context
  userId      String
  user        User     @relation(fields: [userId], references: [id])
  projectId   String?
  taskId      String?
  stepId      String?
  
  // Metadata
  metadata    Json?
  
  createdAt   DateTime @default(now())
}

// ============ ENUMS ============

enum Plan {
  FREE
  PRO
  TEAM
  ENTERPRISE
}

enum ProjectStatus {
  DRAFT
  GENERATING
  READY
  DEPLOYED
  ERROR
}

enum Framework {
  NEXTJS
  REACT
  VUE
  SVELTE
}

enum DatabaseType {
  POSTGRESQL
  MYSQL
  SQLITE
  ORACLE
  NONE
}

enum MessageRole {
  USER
  ASSISTANT
  SYSTEM
}

enum MemberRole {
  OWNER
  ADMIN
  MEMBER
  VIEWER
}

enum WorkflowTemplate {
  NEW_FEATURE
  FIX_BUG
  VIBE_CODE
  REFACTOR
  CUSTOM
}

enum TaskStatus {
  TODO
  IN_PROGRESS
  IN_REVIEW
  DONE
  BLOCKED
}

enum TaskPriority {
  LOW
  MEDIUM
  HIGH
  URGENT
}

enum StepStatus {
  PENDING
  IN_PROGRESS
  COMPLETE
  FAILED
  SKIPPED
}

enum PassType {
  DAILY
  WEEKLY
  MONTHLY
  ANNUAL
  TEAM
}
